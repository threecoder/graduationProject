<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".usermodel.UserDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/userInfo_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/cadetblue"
            app:titleTextColor="@color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="身份证"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_idcard"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:enabled="false"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="姓名"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:enabled="false"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="性别"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">
                <Spinner
                    android:id="@+id/user_sex"
                    android:background="@null"
                    android:paddingRight="10dp"
                    android:paddingLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:entries="@array/sex_view_spinner_values"
                    />
            </LinearLayout>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="手机号"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_phone"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="邮箱"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_email"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="所属"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_company"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:enabled="false"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="职务"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_position"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:enabled="false"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="省份"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_province"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:enabled="false"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="城市"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_city"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:enabled="false"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="区域"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_area"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:enabled="false"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="*"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="详细地址"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user_address"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray"></View>

        <Button
            android:id="@+id/btn_save_info"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:background="@color/seagreen"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>